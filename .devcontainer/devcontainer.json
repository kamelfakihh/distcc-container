{
    "name": "Distcc Devcontainer",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--init",
        "--network=host"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-python.python",
                "xaver.clang-format",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.makefile-tools"
            ]
        }
    }
}
